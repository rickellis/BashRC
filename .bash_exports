#
# ~/.bash_exports
#
# This file gets included by .bashrc
#

# History ignore repeated commands, ignore duplicates
export HISTCONTROL=ignoreboth:erasedups

# History ignore various commands
export HISTIGNORE="&:c:p:x:h:r:.:..:...:cd*:lc*:cl*:ls*:ll:la:ld:l.:lab:dt:ds:dn:db:df:ps:exit:clear:history*:*--help:man *" 

# Export editors
export EDITOR="nano"
export VISUAL="nano"

# Colorize MAN pages
# Idea taken from http://www.tuxarena.com/?p=508
export LESS_TERMCAP_mb=$'\E[01;31m'       # begin blinking
export LESS_TERMCAP_md=$'\E[01;38;5;74m'  # begin bold
export LESS_TERMCAP_me=$'\E[0m'           # end mode
export LESS_TERMCAP_se=$'\E[0m'           # end standout-mode
export LESS_TERMCAP_so=$'\E[38;5;246m'    # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'           # end underline
export LESS_TERMCAP_us=$'\E[04;38;5;146m' # begin underline
